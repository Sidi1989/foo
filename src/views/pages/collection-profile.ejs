<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/others/common-head-components.ejs', {}); %>
    <title>Pinakes - <%=member.nickname%> - <%=collection.name%></title>
  </head>

  <body>
    <!-- Header-->
    <%- include('../partials/others/header.ejs', {}); %>
    <div class="container">

      <!-- Parte superior-->
      <div class="row">

        <div class="col-3">
        <!-- Columna con información de la Colección-->
          <div class="p-1 bg-light border text-center">
            <div class="row m-2">
              <h5 id="collection_name" class="text-primary" name="collection_name"><%=collection.name%></h5>
            </div>
            <div class="row m-2">
              <img id="collection_pic_file"  class="img-fluid" name="collection_pic_file" style="width: 250px; height: 200px" src="<%=collection.pic%>">
            </div>
            <div class="row mt-3">
              <div class="col">
                <i class="fa-solid fa-book-open fa-lg"></i>
                <p id="collection_books_quantity" class="text-primary" name="collection_books_quantity"><%=collection.books.length%></p>
              </div>
              <div class="col">
                <i class="fa-solid fa-hourglass fa-lg"></i>
                <p id="collection_age" class="text-primary" name="collection_age"><%=collection.addingDate%></p>
              </div>
            </div>
            <div class="row m-1">
              <!-- Modal para Editar Colección -->
              <button id="edit_collection_<%=collection.id%>_button"
                    type="button"
                    class="btn edit-collection-button btn-success btn-lg"
                    data-bs-toggle="modal"
                    data-bs-target="#edit_collection_modal">
                <i class="fa-solid fa-pen-to-square"></i>
              </button>
            </div>
          </div>
        </div>

        <div class="col-9">
        <!-- Columna con libros de la Colección seleccionada-->
          <div class="row">
            <div class="section-title">
              Libros de la Colección
            </div>
          </div>

          <div class="row bg-light border text-center mb-3">
            <!-- Modal para añadir libro desde otras Colecciones -->
            <div class="col-4 my-3">
              <button type="button"
                  class="btn btn-outline-success"
                  style="width: 240px; height: 380px;"
                  data-bs-toggle="modal"
                  data-bs-target="#relocate_books_in_collections_modal">
                <i class="fa-solid fa-plus fa-4x"></i>
              </button>
            </div>

            <% collection.books.forEach(function (book, i) { %>
            <div class="col-4 my-3">
              <div class="card text-center">
                <a href="/books/<%=book.id%>">
                 <img class="img-fluid" style="width: 240px; height: 320px" src="<%=book.pic%>">
                 </a>
                 <div class="card-body">
                   <h6><%=book.title%></h6>
                 </div>
              </div>
            </div>
            <% }); %>

          </div>
        </div>

      </div>

    </div>
    <!-- Footer-->
    <%- include('../partials/others/footer.ejs', {}); %>

    <!-- Zona para Modals-->
    <%- include('../partials/modals/edit-collection-modal.ejs', {}); %>
    <%- include('../partials/modals/relocate-books-in-collections-modal.ejs', {}); %>

    <script type="text/javascript" src="/public/js/pages/collection-profile.js"></script>

  </body>
</html>
