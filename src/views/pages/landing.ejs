<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/others/common-head-components.ejs', {}); %>
    <title>Pinakes</title>
  </head>

  <body>
    <div class="container">

      <!--Botones superiores para SignIn y SignUp-->
      <div class="d-flex m-5 justify-content-end">
        <div class="btn-group-lg mb-4" role="group">
          <button type="button" class="btn btn-success" >
            <a href="/auth/signin" class="text-white text-decoration-none">
              <h5>Sign In</h6>
            </a>
          </button>
          <button type="button" class="btn btn-primary" >
            <a href="/auth/signup" class="text-white text-decoration-none">
              <h5>Sign Up</h6>
            </a>
          </button>
        </div>
      </div>

      <!--Logo central del Landing-->
      <div class="row m-5 d-flex justify-content-center text-center text-success text-decoration-none">
        <div class="col-auto">
          <h1 class="display-1">PIN</h1>
        </div>
        <div class="col-auto">
          <img src="https://cdn-icons-png.flaticon.com/512/6627/6627472.png" class="img-fluid" style="width: 100px; height: 100px">
        </div>
        <div class="col-auto">
          <h1 class="display-1">KES</h1>
        </div>
      </div>

      <!--Buscador para la Tabla-->
      <div class="row m-5">
        <form class="d-flex mx-5 mt-4 mb-3" role="search">
          <input id="book_searching_input" class="form-control me-1" type="search" placeholder="Busca un libro por su Título o Autor...">
          <button id="ordering_button" class="btn btn-success" type="button">
            <i class="fa-solid fa-arrow-down-wide-short"></i>
          </button>
        </form>

        <!--Tabla para el Buscador-->
        <div class="table-wrapper mx-5 mb-5">
          <table class="table table-striped table-bordered"
            data-toggle="table"
            data-url="books.json"
            data-pagination="true"
            data-search="true">

            <thead>
              <tr>
                <th class="th">Título
                </th>
                <th class="th">Autor
                </th>
              </tr>
            </thead>

            <tbody id="search_table_body">
            </tbody>

          </table>
        </div>
      </div>

    </div>
    <!-- Footer-->
    <%- include('../partials/others/footer.ejs', {}); %>

    <script type="text/javascript" src="/public/js/pages/landing.js"></script>

  </body>
</html>
