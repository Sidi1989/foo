<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/others/common-head-components.ejs', {}); %>
    <title>Pinakes - <%=book.title%></title>
  </head>

  <body>
    <!-- Header-->
    <%- include('../partials/others/header.ejs', {}); %>
    <div class="container">

      <!-- Parte superior, hasta las Sugerencias-->
      <div class="row mb-5">

        <!-- Perfil del libro-->
        <div class="col-5">
          <%- include('../partials/others/book-info-card.ejs', {}); %>
        </div>

        <!-- Cuerpo con el Nav-Tab-->
        <div class="col-7">

          <!-- Fila con las pestañas para abrir cada Tab-->
          <div class="row">
            <div class="nav nav-tabs" id="tabs-tab" role="tablist">
              <button class="nav-link active text-success" id="tabs-copyInfo-tab"
                data-bs-toggle="tab" data-bs-target="#tabs-copyInfo"
                type="button" role="tab"
                aria-controls="tabs-copyInfo" aria-selected="true">
                <i class="fa-solid fa-bars"></i> Datos del ejemplar
              </button>
              <button class="nav-link text-success" id="tabs-copyStatus-tab"
                data-bs-toggle="tab" data-bs-target="#tabs-copyStatus"
                type="button" role="tab"
                aria-controls="tabs-copyStatus" aria-selected="false">
                <i class="fa-solid fa-location-crosshairs"></i> Ubicación del ejemplar
              </button>
              <button class="nav-link text-success" id="tabs-ratingCard-tab"
                data-bs-toggle="tab" data-bs-target="#tabs-ratingCard"
                type="button" role="tab"
                aria-controls="tabs-ratingCard" aria-selected="false">
                <i class="fa-regular fa-star-half-stroke"></i> Rating
              </button>
              <button class="nav-link text-success" id="tabs-reviews-tab"
                data-bs-toggle="tab" data-bs-target="#tabs-reviews"
                type="button" role="tab"
                aria-controls="tabs-reviews" aria-selected="false">
                <i class="fa-solid fa-gavel"></i> Reviews
              </button>
            </div>
          </div>

          <!-- Fila con el contenido las Tabs-->
          <div class="row mt-3">
            <div class="tab-content" id="tabs-tabContent">

              <!-- Tab con los datos técnicos privados del ejemplar-->
              <div class="tab-pane fade show active" id="tabs-copyInfo" role="tabpanel"
                aria-labelledby="tabs-copyInfo-tab" tabindex="0">
                <%- include('../partials/others/copy-info-card.ejs', {}); %>
              </div>

              <!-- Tab con los datos de ubicación del ejemplar-->
              <div class="tab-pane fade" id="tabs-copyStatus" role="tabpanel"
                aria-labelledby="tabs-copyStatus-tab" tabindex="0">
                <%- include('../partials/others/copy-status-card.ejs', {}); %>
              </div>

              <!-- Tab para la valoración de la obra y el ejemplar-->
              <div class="tab-pane fade" id="tabs-ratingCard" role="tabpanel"
                aria-labelledby="tabs-ratingCard-tab" tabindex="0">
                <%- include('../partials/others/book-rating-card.ejs', {}); %>
              </div>

              <!-- Tab con las reviews-->
              <div class="tab-pane fade" id="tabs-reviews" role="tabpanel"
                aria-labelledby="tabs-reviews-tab" tabindex="0">
                <%- include('../partials/others/book-reviews-navbar.ejs', {}); %>
              </div>

            </div>
          </div>

        </div>
        <!-- Final del Nav-Tab-->

      <div>
      <!-- Final de la Parte superior-->

      <div class="row mt-5">
        <%- include('../partials/others/suggested-books-carousel.ejs', {}); %>
      </div>

    </div>
    <!-- Footer-->
    <%- include('../partials/others/footer.ejs', {}); %>

    <!-- Zona para Modals-->
    <%- include('../partials/modals/edit-book-modal.ejs', {}); %>

    <script type="text/javascript" src="/public/js/pages/book-profile.js"></script>

  </body>
</html>
