<div class="modal fade" id="new_location_modal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header p-2">
        <h5 class="modal-title">Nueva Sede</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <div class="modal-body my-2">
        <form class="row g-3">
          <div class="input-group mb-4">
            <label for="new_location_name" class="input-group-text">Nombre de la Sede</label>
            <input id="new_location_name" type="text" name="new_location_name" class="form-control" required="required">
          </div>
          <div class="input-group mb-4">
            <label for="new_location_pic" class="input-group-text">Imagen para la Sede</label>
            <input id="new_location_pic" type="text" class="form-control" name="new_location_pic" required="required" placeholder="URL de la imagen">
          </div>
        </form>
      </div>

      <div class="modal-footer p-1">
        <button id="new_location_create_button" type="button" name="new_location_create_button" class="btn btn-success">
          Crear Sede
        </button>
      </div>

    </div>
  </div>
</div>

<script type="text/javascript" src="/public/js/partials/modals/new-location-modal.js"></script>
