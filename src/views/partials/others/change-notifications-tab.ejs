<div>
  <form class="row">
    <div class="input-group mb-4">
      <label for="member_edit_email" class="input-group-text">E-mail por defecto</label>
      <input id="member_edit_email" type="email" name="member_edit_email" value="<%=member.email %>" class="form-control">
    </div>

    <div class="input-group mb-4">
      <label for="member_edit_nickname" class="input-group-text">Tel√©fono por defecto</label>
      <input id="member_edit_nickname" type="text" name="member_edit_nickname" value="<%= member.phoneNumber%>" class="form-control">
    </div>

    <div class="form-check form-switch">
      <input class="form-check-input" type="checkbox" role="switch" id="petitions_notifications_switch" checked>
      <label class="form-check-label" for="petitions_notifications_switch">Peticiones</label>
    </div>
    <div class="form-check form-switch">
      <input class="form-check-input" type="checkbox" role="switch" id="reviews_notification_switch" checked>
      <label class="form-check-label" for="reviews_notification_switch">Reviews</label>
    </div>
    <div class="form-check form-switch">
      <input class="form-check-input" type="checkbox" role="switch" id="updates_notifications_switch" checked>
      <label class="form-check-label" for="updates_notifications_switch">Actualizaciones</label>
    </div>
  </form>

  <button id="change_notifications_save_button" type="button"
    class="btn btn-success mt-4" name="change_notifications_save_button">
    <h5>Guardar</h5>
  </button>
</div>

<script type="text/javascript" src="/public/js/partials/change-notifications-tab.js"></script>
