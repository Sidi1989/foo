<div class="p-1 bg-light border">
  <div class="row d-flex justify-content-between">
    <div class="col-auto mt-3 ms-4">
      <i class="fa-solid fa-location-dot"></i> <%=book.location.name%>
    </div>
    <div class="col-auto mt-3 ms-2">
      <i class="fa-solid fa-bookmark"></i> <%=book.collection.name%>
    </div>

    <!-- Modal para editar la situación del libro -->
    <div class="col-auto me-4 mt-1">
      <button id="edit_copy_status_<%=book.id%>_button"
        type="button" class="edit-copy-status-button btn btn-success btn-lg"
        data-bs-toggle="modal" data-bs-target="#edit_copy_status_modal">
        <i class="fa-solid fa-file-signature"></i>
      </button>
    </div>

  </div>

  <!-- Otros libros de la colección -->
  <div id="other_books_in_collection" class="row my-3 d-flex justify-content-between">

    <% book.collection.books.forEach(function(e,i) { %>
    <div class="col-4 d-flex align-items-stretch">
      <div class="card text-center">
        <a href="/books/<%=e.id%>">
          <img class="img-fluid" style="width: 180px; height: 240px" src="<%=e.pic%>">
        </a>
        <div class="card-body">
          <h6><%=e.title%></h6>
          <i id="<%=e.id%>_reviewed_star" class="book-reviewed-star fa-solid fa-star"></i>
        </div>
      </div>
    </div>
    <% }); %>
  </div>

</div>

<!-- Zona para Modals-->
<%- include('../modals/edit-copy-status-modal.ejs', {}); %>
