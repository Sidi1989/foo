<div class="p-1 bg-light border">
  <div class="row d-flex justify-content-between">
    <div class="col-auto text-success mt-1 ms-4">
      <p>
        <a class="text-decoration-none text-success" href="#">
          <i class="fa-solid fa-location-dot"></i>
          <strong>Sede:</strong> <%=book.location.name%>
        </a>
      </p>
      <p>
        <a class="text-decoration-none text-success" href="/members/<%=member.id%>/<%=book.collection.id%>">
          <i class="fa-solid fa-bookmark"></i>
          <strong>Colección:</strong> <%=book.collection.name%>
        </a>
      </p>
    </div>

    <!-- Modal para editar la ubicación del ejemplar -->
    <div class="col-auto me-4 mt-3">
      <button id="edit_copy_status_<%=book.id%>_button"
        type="button" class="edit-copy-status-button btn btn-success btn-lg"
        data-bs-toggle="modal" data-bs-target="#edit_copy_status_modal">
        <i class="fa-solid fa-file-signature"></i>
      </button>
    </div>

  </div>

  <!-- Otros libros de la colección -->
  <div id="other_books_in_collection" class="row my-3 d-flex justify-content-around">
    <% book.collection.books.forEach(function(e) {
      if (e.id == book.id)
        return; %>
    <div class="col-4 d-flex align-items-stretch">
      <div class="card text-center">
        <a href="/books/<%=e.id%>">
          <img class="img-fluid" style="width: 180px; height: 240px" src="<%=e.pic%>">
        </a>
        <div class="card-body">
          <h6><%=e.title%></h6>
          <i id="<%=e.id%>_reviewed_star" class="book-reviewed-star fa-solid fa-star"></i>
        </div>
      </div>
    </div>
    <% }); %>
  </div>

</div>

<!-- Zona para Modals-->
<%- include('../modals/edit-copy-status-modal.ejs', {}); %>
