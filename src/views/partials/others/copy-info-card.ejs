<!-- Perfil del ejemplar-->
<div class="p-1 bg-light border d-flex justify-content-between">
  <div class="col-auto mt-1 ms-4">

    <!-- Varias filas con los datos técnicos -->
    <div class="row mt-1">
      <div class="col-auto">
        <i class="fa-solid fa-barcode"></i>
      </div>
      <div id="book_tech_info_isbn" class="col-auto" name="book_tech_info_isbn">
        <%=book.isbn || 'No disponible'%>
      </div>
    </div>

    <div class="row my-1">
      <div class="col-auto">
        <i class="fa-solid fa-building"></i>
      </div>
      <div id="book_tech_info_editorial" class="col-auto" name="book_tech_info_editorial">
        <%=book.editorial%>
      </div>
    </div>

    <div class="row">
      <div class="col-auto">
        <i class="fa-solid fa-book"></i>
      </div>
      <div id="book_tech_info_format" class="col-auto" name="book_tech_info_format">
        <%=book.format%>
      </div>
    </div>

    <div class="row my-1">
      <div class="col-auto">
        <i class="fa-solid fa-ruler-combined"></i>
      </div>
      <div id="book_tech_info_dimensions" class="col-auto" name="book_tech_info_dimensions">
        <%=book.dimensions.length%> x <%=book.dimensions.width%> Cms
      </div>
    </div>

    <div class="row">
      <div class="col-auto">
        <i class="fa-solid fa-calendar-days"></i>
      </div>
      <div id="book_tech_info_publish_date" class="col-auto" name="book_tech_info_publish_date">
        <%=book.publishDate%>
      </div>
    </div>

    <div class="row my-1">
      <div class="col-auto">
        <i class="fa-solid fa-print"></i>
      </div>
      <div id="book_tech_info_issue" class="col-auto" name="book_tech_info_issue">
        <%=book.issue%>º edición
      </div>
    </div>

    <div class="row">
      <div class="col-auto">
        <i class="fa-solid fa-copy"></i>
      </div>
      <div id="book_tech_info_pages" class="col-auto" name="book_tech_info_pages">
        <%=book.pages%> páginas
      </div>
    </div>

    <div class="row my-1">
      <div class="col-auto">
        <i class="fa-solid fa-language"></i>
      </div>
      <div id="book_tech_info_language" class="col-auto" name="book_tech_info_language">
        <%=book.language.name%>
      </div>
    </div>
  </div>

  <!-- Modal para editar la información del libro -->
  <div class="col-auto me-4 mt-1">
    <button id="edit_copy_info_<%=book.id%>_button"
      type="button" class="btn btn-success btn-lg"
      data-bs-toggle="modal" data-bs-target="#edit_copy_info_modal">
      <i class="fa-solid fa-file-signature"></i>
    </button>
  </div>

</div>

<!-- Zona para Modals-->
<%- include('../modals/edit-copy-info-modal.ejs', {}); %>
